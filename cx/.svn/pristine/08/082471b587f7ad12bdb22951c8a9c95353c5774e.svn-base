.more-news{
  float: left;
  width: 780px;
  margin: 40px 50px 0 0;
}
.more-news .news-item{
  margin-bottom: 25px;
  padding-bottom: 25px;
  border-bottom: 1px solid #f1f1f1;
}
.more-news img{
  float: left;
  width: 230px;
  height: 130px;
  margin-right: 30px;
}
.more-news .item-info{
  float: left;
  width: 520px;
  height: 130px;
}
.more-news .item-title{
  height: 50px;
  line-height: 25px;
  font-size: 18px;
  overflow: hidden;
}
.more-news .item-intro{
  height: 40px;
  margin: 10px 0;
  font-size: 14px;
  line-height: 20px;
  color: #666;
  overflow: hidden;
}
.more-news .item-helper{
  position: relative;
  height: 30px;
  line-height: 30px;
  font-size: 12px;
  color: #666;
}
.more-news .item-helper .date{
  float: left;
}
.more-news .item-helper .view{
  float: right;
  padding-left: 25px;
  background: url('../img/view.png') no-repeat left center;
  background-size: 20px;
}

.issue_notice{background-color:#fff;left:0px;top:200px;width:100%;padding-bottom: 40px;height:auto;min-height:550px;}
.issue_notice .more,.theatre_notice .more{font-size:16px;float:right;right:20px;margin-top:-25px;color:#6E7172}
.issue_notice .content{padding-left: 20px;}
.issue_notice .content ul{padding-left:0px}
.issue_notice .content li{font-weight:bold;color:#666767;list-style-type:none;padding-top:18px;border-bottom:1px solid #E7E8E9;padding-bottom:8px}
.issue_notice .content li a{font-weight:bold;color:#666767; text-decoration: none;}
.issue_notice .content li a:hover{color:#6495ED; text-decoration: underline;}

.issue_notice .content .num{margin-right:15px;background-color:#B9B8B8;color:#fff;font-weight:200;width:28px;line-height:28px;height:28px;float:left;text-align:center;margin-top: -5px;}
.issue_notice .content .hot{background-color:#EB002A}
.issue_notice .content .time{font-size:13px;color:#B9B8B8;float:none!important;margin:-19px 0 0 1075px;}
.issue_notice .meneame{clear: both; padding-top: 70px;}

.issue_notice .headline{background-color:#EB002A;line-height:50px;width:160px;height:50px;text-align:center;font-size:18px;font-weight:600;color:#FFFFFF}
.issue_notice .content{border-top:2px solid #EB002A;}

.content li{text-decoration: none!important ;}
