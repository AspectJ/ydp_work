/*
 * 联系我们Logo
 */
.contact {
	height: 80px;
	width: 100%;
	border-top: 2px solid #EE8295;
	position: absolute;
	top: 100px;
	left: 0px;
	background-color: #575757;
	margin: 0px;
}

.contact img{
	width: 100%;
}

.contact_customer_service {
	background-color: #fff;
	height: 280px;
	margin-top: 220px;
}

.contact_customer_service .headline,
.company_address .headline {
	background-color: #EB002A;
	line-height: 50px;
	width: 160px;
	height: 50px;
	text-align: center;
	font-size: 18px;
	font-weight: 600;
	color: #FFFFFF;
}

.contact_customer_service .content,
.company_address .content {
	border-top: 2px solid #EB002A;
	height: 225px;
}

.contact_customer_service .content div,
.company_address .content .address {
	font-size: 18px;
	color: #818181;
	font-weight: bold;
	padding-top: 40px;
	padding-left: 30px;
}

.company_address {
	background-color: #fff;
	height: 750px;
	margin-top: 60px;
}

#container {
	border: 2px solid #DDDDDD;
	margin: 30px auto;
	height: 540px;
	width: 1120px;
}

#mark_cinema {
	margin: 5px;
	font-weight: bold;
	color: #2E2F32;
}

#mark_address {
	margin: 5px;
	font-size: 13px;
	color: #2E2F32;
}