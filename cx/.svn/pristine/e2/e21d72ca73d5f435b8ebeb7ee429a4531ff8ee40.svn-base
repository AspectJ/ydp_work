.mask{position:absolute;width:100%;height:100%;top:0;left:0;z-index:-1;background: none!important;}
.mask .registtext{width:380px;height:400px;background-color:#fff;margin:9% auto!important;}
.mask .head{background-color:#EB002A;color:#F7F6F7;padding:14px 22px;font-weight:bold}
.mask .head .cancel{background-color:#EB002A;vertical-align:middle;position:absolute;margin-left:290px;margin-top:-5px}
.mask .registtext .tap{margin-left:30px;margin-top:20px;font-weight:bold;color:#A7A7A7;font-size:15px;margin-bottom:10px;text-align: left}
.mask #account,.mask #pass,.mask #repass,.mask #realname,.mask #mobile,.mask #cinamename,.mask #email{letter-spacing: 1px; border:1px solid #DDDDDD;border-radius:5px;line-height:40px;font-size:15px;width:260px;box-shadow:0 0 5px 1px #DDDDDD;padding-left:60px}
.mask .account i,.mask .pass i,.mask .repass i,.mask .realname i,.mask .mobile i,.mask .cinamename i,.mask .email i{position:absolute;margin-left:50px;margin-top:5px;padding:40px 5px;background-image:url(/img/login_vertical_bar.png);background-repeat:no-repeat; background-size: 2px 35px;}
.mask .registtext .account{text-align:center}
.mask #account{background-image:url(/img/login_account.png);background-repeat:no-repeat;background-position:5px}
.mask .registtext .pass{margin-top:15px;text-align:center}
.mask #pass{background-image:url(/img/login_pass.png);background-repeat:no-repeat;background-position:5px}
.mask .registtext .repass{margin-top:15px;text-align:center}
.mask #repass{background-image:url(/img/login_pass.png);background-repeat:no-repeat;background-position:5px}
.mask .registtext .realname{margin-top:15px;text-align:center}
.mask #realname{background-image:url(/img/regist_realname.png);background-repeat:no-repeat;background-position:5px}
.mask .registtext .mobile{margin-top:15px;text-align:center}
.mask .registtext .cinamename{margin-top:15px;text-align:center}
.mask #mobile{background-image:url(/img/regist_mobile.png);background-repeat:no-repeat;background-position:5px}
.mask #cinamename{background-image:url(/img/regist_cinema.png);background-repeat:no-repeat;background-position:5px}
.mask .registtext .email{margin-top:15px;text-align:center}
.mask #email{background-image:url(/img/regist_email.png);background-repeat:no-repeat;background-position:5px}
.mask .tip{margin-top:15px;padding-left:20px;font-size:14px;color:#B9B8B8}
.mask #remember{margin-left:10px;cursor:pointer}
.mask .registtext .nextbtn{cursor:pointer;width:85%;background-color:#EB002A;margin:35px auto;padding:14px 0px;text-align:center;color:#fff;letter-spacing:10px;padding-left: 10px;font-weight:bold;border-radius:5px;box-shadow:0 0 2px 0px #EB002A}
.mask .registtext .registbn{cursor:pointer;width:85%;background-color:#EB002A;margin:35px auto;padding:14px 0px;text-align:center;color:#fff;letter-spacing:10px;padding-left: 10px;font-weight:bold;border-radius:5px;box-shadow:0 0 2px 0px #EB002A}
.mask .registtext input{outline:none;resize:none}

.mask .text_error_tip{
	position: absolute;
	border: 1px solid;
	margin-top: -34px;
	font-size: 13px;
	background-color: #EB002A;
	color: #fff;
	padding: 3px 7px;
	border-radius: 5px;
	border: none;
	margin-left: 255px;
}


.bottom{bottom: 0}
