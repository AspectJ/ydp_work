.dtzx{
	clear: both;
	margin-top: 500px;
	background: #fff;
	height: 480px;
	padding-left: 20px;
	padding-right: 20px;
}

.headline {
	line-height: 50px;
	width: 75px;
	height: 50px;
	font-size: 18px;
	font-weight: bold;
	color: #5C5C5C;
	border-bottom: 3px solid #EB002A;
}

.more{
	font-size: 13px;
	float: right;
	right: 20px;
	margin-top: -18px;
	color: #CACACA;
	font-weight: bold;
	cursor: pointer
}
.content {
	border-top: 1px solid #E5E5E5;
}

.dtzx .content>div{
	width: 330px;
	height: 360px;
	border: 1px solid #c7c8c9;
	float: left;
	margin-top: 20px;
	padding: 8px
}
.dtzx .content li{
	font-size: 14px;
	font-weight: 500;
}
.dtzx .content ul .first{
	font-weight: 700;
}

.dtzx_2{margin: 0px 50px;}

.dtzx .content img{width:328px;height:150px}
.dtzx .content .head{margin:8px;font-weight:bold;color:#EB002A}

.active_carousel{
	margin-top: 30px;
	position: relative;
}
.active_carousel > img{
	width: 100%;
	height: 90px;
	cursor: pointer;
}
.active_carousel .position_num{
    left: 520px;
    bottom: 10px;
    position: absolute;
    text-align: center;
    width: 100%;
}
.active_carousel .position_num div{
	background-color:#eff0f0;
	border-radius: 50%;
	height:8px;
	width:8px;
	float: left;
	position: 50px;
	margin-right: 25px;
}
.active_carousel .position_num .cur{
	background-color: #c0c0c0;
}
}
.active_carousel .left{
	border: 1px solid red;
	position: absolute;
	width: 20px;
	height: 50px;
	background-image: url(img/index_left.png);
}

.news_center{padding-right:20px;padding-left:20px; height:350px;margin-top:30px;width:520px; float: left;background: #fff;}
.news_center .first img{width: 250px; height: 120px; float: left;margin-right:10px;}
.news_center .first p{font-weight: bold; line-height: 120%;margin-top: 8px; font-size: 18px;}
.news_center .first div{color: #8A8A8A;line-height: 120%;margin-top: -5px;overflow: hidden;text-overflow: ellipsis;height:85px;}
.news_center .first div p{font-size:14px;font-weight: 400}

.news_center .first p .dynamic_title:hover{text-decoration: underline;color:#6495ED;cursor: pointer;}
.news_center ul{margin-top: -8px;}
.news_center li{margin-top: 10px;}
/*.news_center li .time{margin-top: -20px;}*/
.news_movie ul{clear: both;}
.news_movie li{margin-top:15px;}

.news_movie{padding-left:20px;padding-right:20px;height:350px;margin-top:30px;width:48%;float: right;background: #fff;}
.news_movie .first img{width: 200px; height: 100px; float: left;margin-right:10px;}
.news_movie .first p{font-weight: bold; line-height: 120%;margin-top: 8px; font-size: 18px;}
.news_movie .first p .movie_title:hover{cursor:pointer;text-decoration: underline;color:#6495ED}
.news_movie .first div{color: #8A8A8A;line-height: 150%;margin-top: -5px;overflow: hidden;text-overflow: ellipsis;height:70px;font-size:14px;font-weight: 400; width: 250px;}
.news_movie .remark{float: right; margin-right: 8px;font-weight:  normal;}
.news_movie .clear{height: 14px;}
.news_movie ul{margin-top: -8px;}
/*.news_movie li{margin-top: 30px;}
.news_movie li .time{margin-top: -25px;}*/
.news_movie .movie_show{ cursor: pointer;
    float: right;
    background-color: #EB002A;
    color: #fff;
    width: 70px;
    height: 25px;
    line-height: 25px;
    font-weight: bold;
    text-align: center;
    margin-right: 5px;
    font-size: 12px;
    margin-top: -60px;
}

.cinema{padding-left:20px;padding-right:20px;margin-top:20px;width:1150px;background: #fff;height: 340px;}
.cinema .left{float: left; margin-top: 116px;margin-right: 25px;cursor: pointer;}
.cinema .right{margin-top: 116px; margin-left: 35px;cursor: pointer;}
.cinema .bg_img{margin-top: 20px; vertical-align: middle;margin-left: 10px;position:relative;float: left;margin-top: 70px;text-align: center;}
.cinema .bg_img img{text-align: center;}
.cinema .bg_img div{position: absolute; top: 117px;color:white;z-index:2;width:100%;font-size: 15px;font-weight: bold;overflow: hidden;text-overflow:ellipsis;white-space: nowrap;margin:0 auto;}
.cinema .bg_img div:hover{text-decoration: underline;color:#6495ED; cursor: pointer;}
.cinema .show {
	width: 246px;
	height: 139px;
}
.bottom{clear: both;margin-top: 50px;}

.content ul{;padding-left:8px;}
.content ul span{background-color:#EB002A;width:7px;height:7px;display:block;float:left;margin-top:6px;margin-right:15px}
.content li{height: 19px;line-height:15px;white-space: nowrap; overflow: hidden;list-style-type: none;color:#666767;font-weight:700;font-size:15px;padding-top:5px;white-space:nowrap;text-overflow:ellipsis;position:relative;}
.content li:hover{text-decoration: underline; color:#6495ED;cursor: pointer;}
.time{float: none !important;right:-5px;position: absolute;}