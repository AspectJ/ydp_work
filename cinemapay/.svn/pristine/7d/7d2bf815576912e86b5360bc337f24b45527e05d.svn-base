    color: #383b43;
}

.alias .showMess .remarks textarea{
	margin-top: 10px;
}

.alias .showMess .message input{
	height:35px;width:235px;text-align:center;border:2px solid black
}

.alias .showMess .btn-p button{
	/* float: none!important; */
