$backColor: #ff4400;
$font: "微软雅黑";


html,body{	height:100%; }
body{
	background:url(../img/background.png) no-repeat center top;
//	background-size:cover;
}
.main-login{ 
	width:620px; height:460px;
	padding:40px; position:absolute;top:50%;right:0;left:0;	
    /*bottom: 0;*/
    margin: -200px auto 0 auto;
	background-image:url(../img/white_background.png);
	background-repeat: no-repeat;
	
	h2{
        height:50px;        
        margin: 30px auto;
        width: 380px;
        background-image: url(../img/title.png);
        background-repeat: no-repeat;
        background-position:0 cneter;
        font-family: $font;
    }
    .inBox{
        width:375px;
        height:50px; line-height:50px;
        margin:auto; margin-bottom:30px;
        border:1px solid #acacac;
        border-radius:5px;
    }
}
.inBox{
    i{
        float:left;
        width:50px; height:50px;
        background:url(../img/账号.png) no-repeat 10px 10px;
    }
    i.pass{background-image: url(../img/密码.png);}
	input{
        float:left;
        width:310px; 
//      padding-left:10px;height:48px; line-height:48px;
        padding: 7px 0 0 12px;
        height: 36px;
        line-height: 36px;
        background:url(../img/竖条.png) no-repeat 0 8px;
        font-size:18px; border:none;
        font-family: $font;
    }
}
.submit{
    width:380px;margin:20px auto; 
    span{    
        color:$backColor; 
        font-size:14px; display:none;
        font-family: $font;
    }
    input{  
        width:380px;
        background:$backColor;
        text-align: center;
        padding:0;font-size:22px;
        height:50px; line-height:50px;
        border:none; color:#FFF;
        border-radius:5px;margin:5px 0;
        font-family: $font;
        cursor: pointer;
    }
}
